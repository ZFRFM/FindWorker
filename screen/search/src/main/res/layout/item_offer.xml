<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="132dp"
    android:layout_height="wrap_content"
    android:background="@drawable/grey_two_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/offerImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/offer_background"
        android:src="@drawable/offer_second_icon"
        android:importantForAccessibility="no"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/offerTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:text="@string/up_cv_in_search"
        android:textColor="@color/white"
        android:fontFamily="@font/sf_pro_display_regular"
        android:maxLines="2" />

    <Button
        android:id="@+id/offerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp"
        android:padding="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:elevation="0dp"
        android:text="@string/up"
        android:textAllCaps="false"
        android:textColor="@color/green"
        android:fontFamily="@font/sf_pro_display_regular" />

</LinearLayout>